# .bandit configuration file

[bandit]
# Exclude test files and common non-production directories
exclude: /tests/,/test/,/venv/,/.venv/,/env/,/.env/,/node_modules/,/migrations/

# Skip specific tests that may produce false positives
skips: B101,B601,B602

# B101: Test for use of assert (common in tests)
# B601: shell_true (paramiko specific, not commonly used)
# B602: subprocess_popen_with_shell_equals_true (can be legitimate)

# Test IDs to run
tests: B201,B301,B302,B303,B304,B305,B306,B401,B402,B403,B404,B501,B502,B503,B504,B505,B506,B507,B701,B702,B703

# Report only issues with severity of medium or higher
severity: medium

# Report only issues with confidence of medium or higher
confidence: medium

# File patterns to include
include: *.py

# Additional paths to exclude
exclude_dirs:
  - /tests/
  - /venv/
  - /.venv/
  - /env/
  - /.env/
  - /build/
  - /dist/
  - /.git/
  - /__pycache__/
  - /.mypy_cache/
  - /.pytest_cache/
  - /node_modules/
  - /frontend/
  - /migrations/
