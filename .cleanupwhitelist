csv/macd_cross/equity_data/*.csv

# Cache directories - temporary data
cache/*.csv
cache/*.json

# Experimental temporary files
experimental/temp/*.csv
experimental/temp/*.json

# Temporary files with specific naming patterns
*temp*.csv
*temp*.json
*tmp*.csv
*tmp*.json
*.temp
*.tmp

# Test result files that are regenerated
test_results.json
final_test_results.json

# Log files
*.log

